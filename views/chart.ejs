<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPR Statistics</title>
    <style>
body {
    font-family: Arial, sans-serif;
    margin: 0px;
    padding: 0px;
    background-color: #150d0dd2;
}
#head {
    background-color: #15cebf;
    color: #ffffff;
    padding: 20px;
    text-align: center;
}
.date {
    text-align: center;
    padding: 20px;
}
    </style>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="background-color: #9fccc8;">
    <header id="head">
        <h1><u>IPR Statistic - Till Date</u></h1>
    </header>
    <div class="date bg-white">Last Updated: <span class="d"></span> <a class="btn btn-info" href="/">Home page</a></div>
    <div class="p-4  bg-white d-flex justify-content-center w-100">
        <canvas id="myChart" class="w-75 h-75"></canvas>
        
    </div>
      
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
     
      <script src="barChart.js"></script>

      <script>
          const span = document.querySelector('.d');
    span.innerText = '12/3/2024';
    const ctx = document.getElementById('myChart');
        const label = <%- JSON.stringify(label); %>;
        const data = <%- JSON.stringify(data); %>;
        console.log(label)
        console.log(data)
    new Chart(ctx, {
    type: 'bar',
    data: {
        labels: label,
        datasets: [{
            // barPercentage: 0.6,
            label: 'Data',
            data: data,
            backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(255, 159, 64, 0.2)',
            'rgba(255, 205, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(201, 203, 207, 0.2)'
            ],
            borderColor: [
            'rgb(255, 99, 132)',
            'rgb(255, 159, 64)',
            'rgb(255, 205, 86)',
            'rgb(75, 192, 192)',
            'rgb(54, 162, 235)',
            'rgb(153, 102, 255)',
            'rgb(201, 203, 207)'
            ],
            borderWidth: 1
  
        }]
    },
    options: {
        categoryPercentage: 1,
        barPercentage: 1,
        scales: {
        y: {
            beginAtZero: true
        }
        }
    }
    });
      </script>
</body>
</html>