<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPR Statistics</title>
    <style>
body {
    font-family: Arial, sans-serif;
    margin: 0px;
    padding: 0px;
    background-color: #150d0dd2;
}
#head {
    background-color: #15cebf;
    color: #ffffff;
    padding: 20px;
    text-align: center;
}
.date {
    text-align: center;
    padding: 20px;
}
    </style>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body style="background-color: #9fccc8;">
    <header id="head">
        <h1><u>IPR Statistic - Till Date</u></h1>
    </header>
    <div class="date bg-white">Last Updated: <span class="d"></span> <a class="btn btn-info" href="/">Home page</a></div>
    <div class="p-4  bg-white d-flex justify-content-center w-100">
        <canvas id="myChart" class="w-75 h-75"></canvas>
        
    </div>
      
      <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
     
      <script src="barChart.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

      <script>
            const span = document.querySelector('.d');
        span.innerText = '12/3/2024';
        const ctx = document.getElementById('myChart');
        Chart.register(ChartDataLabels);
        const label = <%- JSON.stringify(label1); %>;
        const data1 = <%- JSON.stringify(data1); %>;
        const data2 = <%- JSON.stringify(data2); %>;
        //   console.log(label)
        //   console.log(data)
        new Chart(ctx, {
        type: 'bar',
        data: {
        labels: label,
        datasets: [{
            // barPercentage: 0.6,
            // barthickness: ,
            label: 'Filed',
            data: data1,
            backgroundColor: [
            'rgba(255, 99, 132,0.7)',
            ],
            borderColor: [
            'rgb(255, 99, 132)',
            ],
            borderWidth: 1,
            //   barPercentage: 0.7,
            datalabels: {
                align: 'end',
                anchor: 'end'
            }

        
        },{
            // barPercentage: 0.6,
            // barthickness: ,
            label: 'granted',
            data: data2,
            backgroundColor: [
            'rgba(201, 203, 207,0.7)'
            ],
            borderColor: [
            'rgb(201, 203, 207)'
            ],
            borderWidth: 1,
            //   barPercentage: 0.7,
            datalabels: {
                align: 'end',
                anchor: 'end'
            }
        }]
        },

        options: {
                categoryPercentage: 0.7,
                barPercentage: 1,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                
            }
            });
      </script>
</body>
</html>


